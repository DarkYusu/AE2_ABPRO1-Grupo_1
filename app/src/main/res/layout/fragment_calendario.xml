<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/inputTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titulo"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/inputLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lugar"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/inputFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fecha_y_hora"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/descripcionEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descripcion"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/boton_calendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boton_crear_evento"/>

    </LinearLayout>
</ScrollView>
